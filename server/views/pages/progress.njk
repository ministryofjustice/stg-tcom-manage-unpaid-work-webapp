{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-column govuk-!-margin-top-2 govuk-!-margin-bottom-4">
      <a class="govuk-link staff-facing-link" href="/">&lt; Back to homepage</a>
      <h1 class="govuk-heading-m govuk-!-margin-top-4 govuk-!-margin-bottom-1">Your progress</h1>
      <p class="govuk-body govuk-!-font-size-16 govuk-!-margin-top-1 govuk-!-padding-top-1" style="color: #505A5E">Track your community payback progress and manage your appointments</p>
    </div>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full progress-grid">
    <div class="govuk-grid-column-one-half content-div govuk-box govuk-box--white govuk-box--rounded govuk-!-padding-4 border box-shadow">
      <div class="hours-row govuk-!-display-flex govuk-!-align-items-center govuk-!-justify-content-between">
        <p class="govuk-body govuk-!-font-size-18 govuk-!-font-weight-bold govuk-!-margin-bottom-0">Hours completed</p>
        <span class="color-blue govuk-heading-m  govuk-!-padding-0 govuk-!-align-self-center" style="color: #28a745;">{{ progress.completedHours }}/{{ progress.totalHours }}</span>
      </div>
      <div class="progress-bar govuk-!-background-color-dark-gray govuk-!-height-2 govuk-!-margin-top-2 govuk-!-margin-bottom-2 govuk-box--rounded"></div>
      <p class="govuk-!-padding-top-2 govuk-!-margin-bottom-0">You get credit for every hour of community payback completed.</p>
    </div>

    <div class="govuk-grid-column-one-half content-div govuk-box govuk-box--white govuk-box--rounded govuk-!-padding-4 border box-shadow">
      <p class="govuk-body govuk-!-font-size-19 govuk-!-font-weight-bold">Next session</p>
      <p class="govuk-!-margin-bottom-0">No upcoming sessions</p>
      <button class="govuk-button govuk-button--primary govuk-!-width-full transition-colors govuk-!-font-size-14 govuk-!-margin-top-1 govuk-!-margin-bottom-0">Book an appointment</button>
    </div>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-6">
  <div class="govuk-grid-column-full custom-flex">
    <div class="content-div govuk-box govuk-box--white govuk-box--rounded govuk-!-padding-4 border box-shadow">
      <p class="govuk-body govuk-!-font-size-19 govuk-!-font-weight-bold">Previous attendance</p>
      <p class="govuk-!-margin-bottom-0">Your previous attendance will be shown here after your first session.</p>
    </div>

    <div class="govuk-grid-column-full govuk-!-margin-top-2">
      <a class="govuk-link staff-facing-link" href="/">How to contact us</a>
    </div>
  </div>
</div>

{% endblock %}
