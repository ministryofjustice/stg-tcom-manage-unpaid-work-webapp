{% extends "../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Login" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-column-one-third">
      <a class="govuk-link" href="/pop"> Back </a>
    </div>
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l govuk-!-margin-top-6 govuk-!-margin-bottom-2">Enter your email address</h1>
      <form class="form" method="post" action="/sign-in/enter-email-address" novalidate="novalidate">
        <div class="govuk-form-group">
          <input class="govuk-input" id="emailAddress" name="emailAddress" type="email" spellcheck="false" autocomplete="email">
        </div>
        <div class="govuk-form-group">
          <button class="govuk-button govuk-!-width-full" data-module="govuk-button" id="submit">
            Continue
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}
