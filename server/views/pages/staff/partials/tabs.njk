{% endset %}

{% set Interventions %}
<h2 class="govuk-heading-m">Interventions</h2>
{% endset %}

{{ govukTabs({
  items: [
    {
      label: "Overview",
      id: "overview",
      panel: {
        html: Overview
      }
    },
    {
      label: "Appointments",
      id: "appointments",
      panel: {
        html: Appointments
      }
    },
    {
      label: "Personal details",
      id: "personal-details",
      panel: {
        html: PersonalDetails
      }
    },
    {
      label: "Risk",
      id: "risk",
      panel: {
        html: Risk
      }
    }, 
    {
      label: "Sentence",
      id: "sentence",
      panel: {
        html: Sentence
      }
    },
    {
      label: "Activity log",
      id: "activity-log",
      panel: {
        html: ActivityLog
      }
    },
    {
      label: "Compliance",
      id: "compliance",
      panel: {
        html: Compliance
      }
    }, 
    {
      label: "Interventions",
      id: "interventions",
      panel: {
        html: Interventions
      }
    }
  ]
}) }}