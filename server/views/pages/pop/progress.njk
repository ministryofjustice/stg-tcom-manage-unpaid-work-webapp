{% extends "../../layouts/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = applicationName + " - Your progress" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
     {{ govukBackLink({
      text: "Back to homepage",
      href: "/pop"
    }) }}
  </div>
  <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l govuk-!-margin-bottom-2">Your progress</h1>
      <p class="govuk-body subhead">Last updated on 10 March 2025, 2:29pm</p>
        <div class="govuk-grid-row govuk-!-margin-top-8">
          <div class="govuk-grid-column-three-quarters">
            <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-0">Hours completed</p>
          </div>
          <div class="govuk-grid-column-one-quarter">
            <span class="govuk-heading-m govuk-!-margin-0 govuk-!-padding-0  govuk-!-text-align-right">{{ progressData.completedHours }}/{{ progressData.totalHours }}</span>
          </div>
        </div>
      <div class="govuk-box total-hours">
          <div class="not-completed-hours" style="width: 0%"></div>
        </div>
     {{ govukDetails({
        summaryText: "Help with my unpaid work hours",
        html: "<p>You can do up to 30% of your hours through Education, Training and Employment (ETE) programmes on <a href='https://www.communitycampus.online/#/sign-in' class='govuk-link'>Community Campus</a>.</p>" +
            govukTable({
                caption: "Type of unpaid work",
                captionClasses: "govuk-table__caption--m",
                firstCellIsHeader: false,
                head: [
                    { text: "Type of unpaid work" },
                    { text: "Hours sentenced" },
                    { text: "Hours completed" }
                ],
                rows: [
                    [
                        { text: "In person" },
                        { text: "70" },
                        { text: "40" }
                    ],
                    [
                        { text: "Education, Training and Employment (ETE) programmes" },
                        { text: "30" },
                        { text: "10" }
                    ],
                    [
                        { text: "Total", classes: "govuk-!-font-weight-bold" },
                        { text: "100", classes: "govuk-!-font-weight-bold" },
                        { text: "50", classes: "govuk-!-font-weight-bold" }
                    ]
                ]
            })
    }) }}


     <h1 class="govuk-heading-m govuk-!-margin-bottom-3">Next Session</h1>
      <p class="govuk-body subhead">Your next session will be shown here after it has been scheduled</p>

      <h1 class="govuk-heading-m govuk-!-margin-bottom-3">Past attendance</h1>
      <p class="govuk-body subhead">Your previous attendance will be shown here after your first session</p>
  </div>
  </div>
</div>

{% endblock %}
