{% extends "../../partials/layout.njk" %}
{%- from "moj/components/progress-bar/macro.njk" import mojProgressBar -%}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-column govuk-!-margin-top-2 govuk-!-margin-bottom-4">
      <a class="govuk-link" href="/appointments">&lt; Back to Your appointments</a>
      <h1 class="govuk-heading-l govuk-!-margin-top-8 govuk-!-margin-bottom-1">View appointment</h1>
    </div>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-6">
  <div class="govuk-grid-column-full">
    <div class="govuk-box govuk-box--white govuk-box--rounded govuk-!-padding-4 border box-shadow">
      <div class="govuk-grid-row govuk-!-margin-bottom-4">
        <div class="govuk-grid-column-one-third">
          <h3 class="govuk-heading-s">Placement</h3>
        </div>
        <div class="govuk-grid-column-two-thirds">
          <p class="govuk-body govuk-!-padding-0 govuk-!-margin-0 govuk-!-padding-bottom-2">Community Garden Maintenance</p>
          <p class="govuk-body-s govuk-!-color-muted govuk-!-padding-0 govuk-!-margin-0">123 Garden Street, London SE1 7TH</p>
        </div>
      </div>
      <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-4 govuk-!-color-light">

      <div class="govuk-grid-row govuk-!-margin-bottom-2">
        <div class="govuk-grid-column-one-third">
          <h3 class="govuk-heading-s">Date</h3>
        </div>
        <div class="govuk-grid-column-two-thirds">
          <p class="govuk-body">Friday 15 March 2024</p>
        </div>
      </div>
      <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-4 govuk-!-color-light">

      <div class="govuk-grid-row govuk-!-margin-bottom-2">
        <div class="govuk-grid-column-one-third">
          <h3 class="govuk-heading-s">Time</h3>
        </div>
        <div class="govuk-grid-column-two-thirds">
          <p class="govuk-body">09:00</p>
        </div>
      </div>
      <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-4 govuk-!-color-light">

      <div class="govuk-grid-row govuk-!-margin-top-2">
        <div class="govuk-grid-column-full govuk-!-display-flex govuk-!-space-x-4">
          <button class="govuk-button govuk-button--secondary govuk-!-margin-bottom-0 govuk-!-margin-right-2">
            Edit booking
          </button>
          <button class="govuk-button govuk-button--secondary govuk-!-margin-bottom-0 govuk-!-margin-right-2">
            Cancel booking
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
