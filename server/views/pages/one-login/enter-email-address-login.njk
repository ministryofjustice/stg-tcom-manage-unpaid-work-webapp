{% extends "./layouts/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set pageTitle = applicationName + " - Enter email address" %}
{% set mainClasses = "app-auth-container govuk-body" %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
  {{ govukBackLink({
  text: "Back",
  href: "/one-login/sign-in-or-create"
}) }}
        <form class="form" action="/one-login/enter-email-address-login" method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--l" for="email">
            Enter your email address to sign in to your GOV.UK One Login
                    </label>
                </h1>

                <input class="govuk-input" id="email" name="email" type="text">

            </div>
        <button class="govuk-button" data-module="govuk-button" id="submit">
          Continue
        </button>

        </form>
    </div>
</div>

{% endblock %}
